{
  "manifest_version": 2,
  "name": "Dark Mode",
  "version": "1.10",
  "description": "Adds a dark screen over everything",
  "icons": {
    "16": "moon.svg",
    "32": "moon.svg",
    "48": "moon.svg",
    "128": "moon.svg"
  },
  "permissions": [
    "<all_urls>",
    "menus",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["main.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "gayali1rohit@gmail.com"
    }
  },
  "browser_action": {
    "default_icon": {
      "16": "moon.svg",
      "32": "moon.svg",
      "48": "moon.svg",
      "64": "moon.svg",
      "128": "moon.svg"
    },
    "default_title": "Click to toggle darkmode on/off or middle click to change the settings"
  }
}